  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "ava": "^3.3.0",
    "documentation-theme-bespoke": "^1.1.3",
    "gulp": "^4.0.2",
    "gulp-better-rollup": "^4.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-strip-comments": "^2.5.2",
