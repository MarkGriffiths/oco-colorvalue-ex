{
  "name": "@thebespokepixel/oco-colorvalue-ex",
  "version": "0.1.1",
  "description": "Extended color conversions and handling for Open Color",
  "main": "index.js",
  "scripts": {
    "test": "xo && snyk test && nyc ava",
    "doc-serve": "documentation serve --watch --theme node_modules/documentation-theme-bespoke --document-exported --github --config src/docs/documentation.yml --name $npm_package_name  --project-version $npm_package_version src/lib/index.js",
    "doc-build": "documentation build --format html --output docs --theme node_modules/documentation-theme-bespoke --document-exported --github --config src/docs/documentation.yml --name $npm_package_name  --project-version $npm_package_version src/lib/index.js",
    "code-climate": "nyc report --reporter=text-lcov | codeclimate-test-reporter",
    "coverage": "nyc ava && nyc report --reporter=lcov --report-dir test/coverage; open test/coverage/lcov-report/index.html",
    "generate-test-fixtures": "scripts/generate-test-fixtures",
    "postpublish": "greenkeeper-postpublish",
    "clean": "gulp clean"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MarkGriffiths/oco-colorvalue-ex.git"
  },
  "files": [
    "index-es.js",
    "index.js"
  ],
  "keywords": [
    "Open",
    "Color",
    "oco",
    "color",
    "colour",
    "core"
  ],
  "author": "Mark Griffiths <mark@thebespokepixel.com> (http://thebespokepixel.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MarkGriffiths/oco-colorvalue-ex/issues"
  },
  "homepage": "https://github.com/MarkGriffiths/oco-colorvalue-ex#readme",
  "dependencies": {
    "@thebespokepixel/es-tinycolor": "^0.2.0",
    "chroma-js": "^1.1.1",
    "opencolor": "^0.2.0"
  },
  "devDependencies": {
    "@thebespokepixel/cordial": "^0.16.2",
    "ava": "^0.16.0",
    "codeclimate-test-reporter": "^0.3.3",
    "greenkeeper-postpublish": "^1.0.1",
    "gulp": "github:gulpjs/gulp#4.0",
    "nyc": "^8.3.0",
    "snyk": "^1.19.1",
    "xo": "^0.16.0"
  },
  "xo": {
    "semicolon": false,
    "esnext": true,
    "ignores": [
      "index*.js",
      "lib/**",
      "docs/**"
    ]
  },
  "buildNumber": 0,
  "engines": {
    "node": ">=4.0 <7.0"
  },
  "jsnext:main": "index-es.js"
}
